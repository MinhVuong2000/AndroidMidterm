<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:context=".home_screen.AboutActivity"
    tools:openDrawer="start">
    <LinearLayout
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/colorAccent"
            android:id="@+id/about_toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp"
            tools:ignore="MissingConstraints">
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textSize="35sp"
            android:textStyle="bold"/>

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:src="@drawable/son"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/round"/>

            <TextView
                android:padding="20dp"
                android:layout_gravity="center"
                android:text="Nguyen Thai Son"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="25dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:src="@drawable/vuong"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/round"/>

            <TextView
                android:padding="20dp"
                android:layout_gravity="center"
                android:text="Nguyen Thi Minh Vuong"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="right"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:padding="20dp"
                android:layout_gravity="center"
                android:text="Dinh Phong Phu"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/phu"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/round"/>
        </LinearLayout>

        <LinearLayout
            android:gravity="right"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:padding="20dp"
                android:layout_gravity="center"
                android:text="Tran Nhat Viet"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:src="@drawable/viet"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@drawable/round" />
        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>